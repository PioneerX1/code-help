<form>
  <div class="form-group">
    <label for="author">Your Name: </label>
    {{input value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="ask">Ask Your Question: </label>
    {{input value=ask id="ask"}}
  </div>
  <div class="form-group">
    <label for="notes">Additional Notes: </label>
    {{input value=notes id="notes"}}
  </div><br>
  <button class="btn" {{action 'saveQuestion'}}>Submit Your Question</button>
</form>
