{{#if addNewAnswer}}
<h3>New Answer</h3>
  <form>
    <div class="form-group">
      <label for="author">Your Name: </label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="solution">Your Solution: </label>
      {{input value=solution id="solution"}}
    </div>
    <button class="btn btn-info" {{action 'saveAnswer'}}>Submit Answer</button>
  </form>
{{else}}
  <button class="btn btn-info" {{action 'answerFormShow'}}>Contribute Answer</button>
{{/if}}
